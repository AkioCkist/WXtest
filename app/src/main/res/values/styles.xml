<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style for our location dropdown PopupWindow animations -->
    <style name="LocationDropdownAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- Dark theme for dialogs including location selection dialog -->
    <style name="Theme.Dialog.Dark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#2D2A36</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <!-- Material Date Picker Dark Theme - using the standard theme with color overrides -->
    <style name="CustomMaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">#222126</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="materialCalendarHeaderToggleButton">@style/Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton</item>
    </style>

    <!-- Material Time Picker Dark Theme - using the standard theme with color overrides -->
    <style name="CustomMaterialTimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">#222126</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorAccent">#8BC34A</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownVerticalOffset">35dp</item>
        <item name="android:popupBackground">@drawable/bg_spinner_white_rounded</item>
        <item name="android:dropDownWidth">match_parent</item>
    </style>
</resources>
