<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/themes.xml -->
<resources>
    <!-- Base application theme -->
    <style name="Theme.MobileDesignFinalTerm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/accent_green</item>
        <item name="colorPrimaryVariant">@color/accent_green_pressed</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorSecondaryVariant">@color/accent_green_pressed</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Remove window content transitions for clean look -->
        <item name="android:windowContentTransitions">false</item>

    </style>
</resources>