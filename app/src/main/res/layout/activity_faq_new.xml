                        android:id="@+id/faq_arrow_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_faq_down"
                        app:tint="@android:color/white" />
                </LinearLayout>

                <TextView
                    android:id="@+id/faq_answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Simply browse our available cars, select your preferred vehicle, choose your pickup and drop-off dates, and complete the booking process through our app."
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:visibility="gone" />
