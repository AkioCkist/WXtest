<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:layout_margin="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_background"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Infomation"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#F2FFFFFF"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:letterSpacing="-0.02" />

        <!-- Pickup Location Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Location"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#D9FFFFFF"
            android:layout_marginBottom="10dp"
            android:letterSpacing="-0.01" />

        <Spinner
            android:id="@+id/spinnerPickupLocation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_spinner_white_rounded"
            android:popupBackground="@drawable/bg_spinner_white_rounded"
            android:textColor="@color/black"
            style="@style/CustomSpinnerStyle"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="16dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_gradient"
            android:layout_marginVertical="16dp" />

        <!-- Return Location Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop off location"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#D9FFFFFF"
            android:layout_marginBottom="10dp"
            android:letterSpacing="-0.01" />

        <Spinner
            android:id="@+id/spinnerReturnLocation"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_spinner_white_rounded"
            android:popupBackground="@drawable/bg_spinner_white_rounded"
            style="@style/CustomSpinnerStyle"
            android:spinnerMode="dropdown"
            android:layout_marginBottom="16dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_gradient"
            android:layout_marginVertical="16dp" />

        <!-- Pickup Time Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Time"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#D9FFFFFF"
            android:layout_marginBottom="10dp"
            android:letterSpacing="-0.01" />

        <Button
            android:id="@+id/btnPickupTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_reset_selector"
            android:text="Chọn thời gian nhận"
            android:textColor="#CCFFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="-0.01"
            android:stateListAnimator="@null"
            android:elevation="0dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_gradient"
            android:layout_marginVertical="16dp" />

        <!-- Return Time Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drop off Time"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#D9FFFFFF"
            android:layout_marginBottom="10dp"
            android:letterSpacing="-0.01" />

        <Button
            android:id="@+id/btnReturnTime"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_reset_selector"
            android:text="Chọn thời gian trả"
            android:textColor="#CCFFFFFF"
            android:textSize="15sp"
            android:textStyle="bold"
            android:letterSpacing="-0.01"
            android:stateListAnimator="@null"
            android:elevation="0dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:background="@drawable/button_reset_selector"
                android:text="Cancel"
                android:textColor="#CCFFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                android:stateListAnimator="@null"
                android:elevation="0dp" />

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/button_apply_selector"
                android:text="Confirm"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                android:stateListAnimator="@null"
                android:elevation="4dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
