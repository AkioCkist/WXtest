<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="#4C494B">
    <!-- Card background color -->

    <!-- Main LinearLayout for the car listing item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/glow_gradient"
        android:padding="16dp">

        <!-- Car Header with Heart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_FRcardCarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All New Rush"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_FRcardCarType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUV"
                    android:textSize="14sp"
                    android:textColor="#A0AEC0"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_FRFavorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_heart_outline"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

        </LinearLayout>

        <!-- Car Image and Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <!-- Car Image -->

            <!-- Car Specifications -->
            <ImageView
                android:id="@+id/iv_FRprimaryImageCar"
                android:layout_width="210dp"
                android:layout_height="100dp"
                android:background="@drawable/carlisting_rounded_image"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:scaleType="centerCrop"
                android:src="@drawable/tesla_model_x" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <!-- Fuel Type -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/carlisting_ic_fuel"
                        android:layout_marginEnd="8dp"
                        app:tint="#18F45D" />

                    <TextView
                        android:id="@+id/tv_FRCardFuelType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xăng"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <!-- Transmission -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/carlisting_ic_transmission"
                        android:layout_marginEnd="8dp"
                        app:tint="#18F45D"/>

                    <TextView
                        android:id="@+id/tv_FRCardTransmission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số sàn"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <!-- Seats -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/carlisting_ic_seat"
                        android:layout_marginEnd="8dp"
                        app:tint="#18F45D"/>

                    <TextView
                        android:id="@+id/tv_Seats"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 People"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <!-- Fuel Consumption -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/carlisting_ic_consumption"
                        android:layout_marginEnd="8dp"
                        app:tint="#18F45D"/>

                    <TextView
                        android:id="@+id/tv_FRcardConsumption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5L/100km"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Price and Rental Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <!-- Price Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_FRBasePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$72.00"
                        android:textSize="18sp"
                        android:textColor="#9AE6B4"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/ day"
                        android:textSize="14sp"
                        android:textColor="#A0AEC0"
                        android:layout_marginStart="4dp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Rental Button -->
            <Button
                android:id="@+id/btn_FRrentalNow"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/carlisting_button_rental"
                android:text="Rental Now"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:minWidth="100dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>