<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222126">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutLocationHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="4dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/text_secondary" />

                        <TextView
                            android:id="@+id/textViewLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detecting location..."
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/notosans_semibold" />

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_dropdown"
                            android:layout_marginStart="4dp"
                            app:tint="@color/text_secondary" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rent a Car anytime"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/notosans_bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profileSection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/imageViewProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/sample_avatar"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:layout_marginEnd="12dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBookingSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:id="@+id/layoutPickupCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/pickup_dropoff_background"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/pickup_indicator"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pick - Up"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/notosans_semibold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Locations"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/notosans_regular"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:id="@+id/layoutPickupLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/textViewPickupLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Current Location"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/notosans_semibold" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_dropdown"
                                    android:layout_marginStart="6dp"
                                    app:tint="@color/text_secondary" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/notosans_regular"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:id="@+id/layoutPickupDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/textViewPickupDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20 July 2022"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/notosans_semibold" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_dropdown"
                                    android:layout_marginStart="6dp"
                                    app:tint="@color/text_secondary" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/notosans_regular"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:id="@+id/layoutPickupTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/textViewPickupTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="07:00"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/notosans_semibold" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_dropdown"
                                    android:layout_marginStart="6dp"
                                    app:tint="@color/text_secondary" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutSwapSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewSwapLocations"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:background="@drawable/green_accent_button_background"
                        android:contentDescription="Search Cars"
                        android:padding="16dp"
                        android:src="@drawable/ic_arrow_forward"
                        app:tint="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutDropoffCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/pickup_dropoff_background"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/dropoff_indicator"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drop - Off"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/notosans_semibold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Locations"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/notosans_regular"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:id="@+id/layoutDropoffLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/textViewDropoffLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Current Location"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/notosans_semibold" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_dropdown"
                                    android:layout_marginStart="6dp"
                                    app:tint="@color/text_secondary" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/notosans_regular"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:id="@+id/layoutDropoffDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/textViewDropoffDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="21 July 2022"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/notosans_semibold" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_dropdown"
                                    android:layout_marginStart="6dp"
                                    app:tint="@color/text_secondary" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/notosans_regular"
                                android:layout_marginBottom="4dp" />

                            <LinearLayout
                                android:id="@+id/layoutDropoffTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="4dp">

                                <TextView
                                    android:id="@+id/textViewDropoffTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="01:00"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/notosans_semibold" />

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:src="@drawable/ic_dropdown"
                                    android:layout_marginStart="6dp"
                                    app:tint="@color/text_secondary" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutTopBrandsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textViewTopBrands"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Top Brands"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/notosans_bold" />

                <TextView
                    android:id="@+id/textViewViewAllBrands"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosans_semibold"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewBrands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:clipToPadding="false"
                android:paddingStart="0dp"
                android:paddingEnd="16dp" />

            <LinearLayout
                android:id="@+id/layoutTopCarsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/textViewTopRatedCars"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Top Rated Cars"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/notosans_bold" />

                <TextView
                    android:id="@+id/textViewViewAllCars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosans_semibold"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewCars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:clipToPadding="false"
                android:paddingStart="0dp"
                android:paddingEnd="16dp" />

            <!-- FAQ Section -->
            <LinearLayout
                android:id="@+id/layoutFAQSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Frequently Asked Questions"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/notosans_bold"
                    android:layout_marginBottom="16dp" />

                <!-- FAQ Item 1 -->
                <LinearLayout
                    android:id="@+id/faqItem1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background_dark"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="How do I rent a car?"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/notosans_semibold" />

                        <ImageView
                            android:id="@+id/faqArrow1"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_faq_down"
                            app:tint="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/faqAnswer1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Simply browse our available cars, select your preferred vehicle, choose your pickup and drop-off dates, and complete the booking process through our app."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_marginTop="12dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- FAQ Item 2 -->
                <LinearLayout
                    android:id="@+id/faqItem2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background_dark"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="What documents do I need?"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/notosans_semibold" />

                        <ImageView
                            android:id="@+id/faqArrow2"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_faq_down"
                            app:tint="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/faqAnswer2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You need a valid driver's license, identification card or passport, and a credit card for payment and security deposit."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_marginTop="12dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- FAQ Item 3 -->
                <LinearLayout
                    android:id="@+id/faqItem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background_dark"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Can I cancel my booking?"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/notosans_semibold" />

                        <ImageView
                            android:id="@+id/faqArrow3"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_faq_down"
                            app:tint="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/faqAnswer3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Yes, you can cancel your booking up to 24 hours before the pickup time for a full refund. Cancellations within 24 hours may incur a fee."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_marginTop="12dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- FAQ Item 4 -->
                <LinearLayout
                    android:id="@+id/faqItem4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background_dark"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="What insurance options are available?"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/notosans_semibold" />

                        <ImageView
                            android:id="@+id/faqArrow4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_faq_down"
                            app:tint="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/faqAnswer4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We offer comprehensive insurance coverage including third-party liability, collision damage waiver, and theft protection. All vehicles come with basic insurance included."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_marginTop="12dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- FAQ Item 5 -->
                <LinearLayout
                    android:id="@+id/faqItem5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_background_dark"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="How much does it cost to rent a car?"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:fontFamily="@font/notosans_semibold" />

                        <ImageView
                            android:id="@+id/faqArrow5"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_faq_down"
                            app:tint="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/faqAnswer5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Car rental prices vary depending on the vehicle type, rental duration, and season. Prices start from $15/day for economy cars. Check our app for current rates and special offers."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/notosans_regular"
                        android:layout_marginTop="12dp"
                        android:visibility="gone" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnViewAllFAQ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View All FAQs"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosans_semibold"
                    android:background="@drawable/button_background"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"
                    style="@style/Widget.AppCompat.Button.Borderless" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/dropdownMenu"
        android:layout_width="180dp" android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/dropdown_background"
        android:orientation="vertical"
        android:padding="6dp" android:elevation="12dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnMyProfile"
            android:layout_width="match_parent"
            android:layout_height="40dp" android:background="@drawable/menu_item_background_dark"
            android:text="My Profile"
            android:textColor="@color/white"
            android:textSize="14sp" android:fontFamily="@font/notosans_semibold"
            android:gravity="start|center_vertical"
            android:paddingStart="12dp" android:paddingEnd="12dp" android:drawableStart="@drawable/ic_profile"
            android:drawablePadding="10dp" android:drawableTint="@color/primary"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <Button
            android:id="@+id/btnAboutUs"
            android:layout_width="match_parent"
            android:layout_height="40dp" android:background="@drawable/menu_item_background_dark"
            android:text="About Us"
            android:textColor="@color/white"
            android:textSize="14sp" android:fontFamily="@font/notosans_semibold"
            android:gravity="start|center_vertical"
            android:paddingStart="12dp" android:paddingEnd="12dp" android:drawableStart="@drawable/ic_settings"
            android:drawablePadding="10dp" android:drawableTint="@color/primary"
            android:layout_marginTop="4dp"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <Button
            android:id="@+id/btnFAQ"
            android:layout_width="match_parent"
            android:layout_height="40dp" android:background="@drawable/menu_item_background_dark"
            android:text="FAQ"
            android:textColor="@color/white"
            android:textSize="14sp" android:fontFamily="@font/notosans_semibold"
            android:gravity="start|center_vertical"
            android:paddingStart="12dp" android:paddingEnd="12dp" android:drawableStart="@drawable/ic_help"
            android:drawablePadding="10dp" android:drawableTint="@color/primary"
            android:layout_marginTop="4dp"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_secondary"
            android:alpha="0.3"
            android:layout_marginTop="6dp" android:layout_marginBottom="6dp" /> <Button
        android:id="@+id/btnSignOut"
        android:layout_width="match_parent"
        android:layout_height="40dp" android:background="@drawable/menu_item_background_dark"
        android:text="Sign Out"
        android:textColor="#FF4444"
        android:textSize="14sp" android:fontFamily="@font/notosans_semibold"
        android:gravity="start|center_vertical"
        android:paddingStart="12dp" android:paddingEnd="12dp" android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="10dp" android:drawableTint="#FF4444"
        style="@style/Widget.AppCompat.Button.Borderless" />
    </LinearLayout>
</FrameLayout>

