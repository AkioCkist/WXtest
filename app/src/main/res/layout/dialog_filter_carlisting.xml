<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:layout_margin="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_background"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter Cars"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:letterSpacing="-0.02" />

        <!-- Brand Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:alpha="0.85"
            android:layout_marginBottom="10dp"
            android:letterSpacing="-0.01" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBrands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_gradient"
            android:layout_marginVertical="16dp" />

        <!-- Vehicle Type Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:alpha="0.85"
            android:layout_marginBottom="10dp"
            android:letterSpacing="-0.01" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewVehicleTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_gradient"
            android:layout_marginVertical="16dp" />

        <!-- Fuel Type Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fuel Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:alpha="0.85"
            android:layout_marginBottom="10dp"
            android:letterSpacing="-0.01" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFuelTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/divider_gradient"
            android:layout_marginVertical="16dp" />

        <!-- Seats Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seats"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:alpha="0.85"
            android:layout_marginBottom="10dp"
            android:letterSpacing="-0.01" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:background="@drawable/button_reset_selector"
                android:text="Reset"
                android:textColor="@color/white"
                android:alpha="0.8"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                android:stateListAnimator="@null"
                android:elevation="0dp" />

            <Button
                android:id="@+id/btnApply"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:background="@drawable/button_apply_selector"
                android:text="Apply Filters"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                android:stateListAnimator="@null"
                android:elevation="4dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
