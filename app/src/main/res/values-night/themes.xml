<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/themes.xml -->
<resources>
    <!-- Base application theme -->
    <style name="Theme.MobileDesignFinalTerm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/accent_green</item>
        <item name="colorPrimaryVariant">@color/accent_green_pressed</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent_green</item>
        <item name="colorSecondaryVariant">@color/accent_green_pressed</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background_dark</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/background_dark</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Remove window content transitions for clean look -->
        <item name="android:windowContentTransitions">false</item>

    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">#1A191D</item> <!-- Adjust based on your dark theme -->
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowBackground">@color/background_dark</item> <!-- Define this color -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/dialog_background</item> <!-- Define this color -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorAlertDialogListItem">@color/white</item>
        <item name="colorAccent">@color/primary</item> <!-- For buttons and highlights -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#FF4444</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>